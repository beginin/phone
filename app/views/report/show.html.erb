<h1>Report#showload</h1>
<table>
  <tr>
    <th>Месяц</th>
    <th>tnumber</th>
    <th>tarifname</th>
    <th>totalsum</th>
    <th>uprsum</th>
    <th>finsum</th>
    <th>secondname</th>
    <th>firstname</th>
    <th>midlename</th>
    <th>namecfu</th>
    <th>money</th>
    <th>datein</th>
    <th>dateout</th>
    <th>timein</th>
    <th>timeout</th>
  </tr>

<% @report1.each do |r| %>
  <tr>
    <% r["uprsum"] = "0" if r["uprsum"].to_d < 0 if r["uprsum"].present? %>
    <td><%= Time.parse(r["date_month"]).strftime("%B")%></td>
    <td><%= r["tnumber"] %></td>
    <td><%= r["tarifname"] %></td>
    <td><%= r["totalsum"] %></td>
    <td><%= r["uprsum"].to_s  %></td>
    <td><%= r["finsum"] %></td>
    <td><%= r["secondname"] %></td>
    <td><%= r["firstname"] %></td>
    <td><%= r["midlename"] %></td>
    <td><%= r["namecfu"] %></td>
    <td><%= r["money"] %></td>
    <td><%= r["datein"] %></td>
    <td><%= r["dateout"] %></td>
    <td><%= r["timein"] %></td>
    <td><%= r["timeout"] %></td>   
  </tr>
<% end %>
</table>

